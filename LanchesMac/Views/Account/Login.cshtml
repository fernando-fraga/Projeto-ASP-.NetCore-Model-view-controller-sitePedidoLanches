@model LoginViewModel

<table class="table">
    <tr>
        <td class="align-middle text-center"><img src="~/images/login.png" alt="Tela de login" class="img-fluid" width="100" height="100" /></td>
        <td>
            <div class="row">
                <div class="col-10 col-md-10 col-lg-20">
                    <h4>Login</h4>

                    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group" style="margin-bottom: 20px">
                            <label asp-for="UserName" class="col-md-2 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group" style="margin-bottom: 20px">
                            <label asp-for="Password" class="col-md-2 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group" style="margin-bottom: 20px">
                            <div class="col-md-8">
                                <input type="submit" class="btn btn-outline-success" value="Log in"/>
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </td>

    </tr>

</table>